{
  "mcpServers": {
    "_comment": "=== COMPLETELY FREE (No API keys needed) ===",

    "arxiv": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/blazickjp/arxiv-mcp-server", "arxiv-mcp-server"]
    },
    "mermaid": {
      "command": "npx",
      "args": ["-y", "mcp-mermaid"]
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/lab2208"]
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "fetch-mcp"]
    },
    "kubernetes": {
      "command": "npx",
      "args": ["-y", "mcp-server-kubernetes"]
    },
    "terraform": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "-v", "/home/lab2208:/home/lab2208", "hashicorp/terraform-mcp-server"]
    },
    "pandoc": {
      "command": "uvx",
      "args": ["mcp-pandoc"]
    },
    "vale": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/ChrisChinchilla/Vale-MCP", "vale-mcp"]
    },

    "_comment2": "=== FREE WITH ACCOUNT (Free API key required) ===",

    "semantic-scholar": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/JackKuo666/semanticscholar-MCP-Server", "semanticscholar-mcp-server"],
      "env": {
        "SEMANTIC_SCHOLAR_API_KEY": "${SEMANTIC_SCHOLAR_API_KEY}"
      }
    },
    "zotero": {
      "command": "npx",
      "args": ["-y", "mcp-zotero"],
      "env": {
        "ZOTERO_API_KEY": "${ZOTERO_API_KEY}",
        "ZOTERO_USER_ID": "${ZOTERO_USER_ID}"
      }
    },

    "_comment3": "=== SELF-HOSTED (Free, needs local setup) ===",

    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres", "${POSTGRES_CONNECTION_STRING:-postgresql://localhost/mydb}"]
    },
    "mlflow": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/iRahulPandey/mlflowMCPServer", "mlflow-mcp-server"],
      "env": {
        "MLFLOW_TRACKING_URI": "${MLFLOW_TRACKING_URI:-http://localhost:5000}"
      }
    },
    "prometheus": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "-e", "PROMETHEUS_URL=${PROMETHEUS_URL:-http://localhost:9090}", "ghcr.io/pab1it0/prometheus-mcp-server:latest"]
    }
  }
}
